<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buddy_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/buddy_presence"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_margin="2dip"
        android:text="TODO photo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/buddy_item_jid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textSize="8sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/buddy_item_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/buddy_item_last_chat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textSize="8sp"
            android:typeface="sans" />
        
        <TextView
            android:id="@+id/buddy_item_last_seen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textSize="8sp"
            android:typeface="sans" />             
    </LinearLayout>

</LinearLayout>